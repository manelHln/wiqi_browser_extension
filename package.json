{
  "name": "wiqi-extension",
  "displayName": "Wiqi",
  "version": "0.0.1",
  "description": "Wiqi shopping assistant",
  "author": "Emmanuel Holonou <holonouemmanuel0@gmail.com>",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.58.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "plasmo": "0.90.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.64.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.3",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.4.1",
    "@types/chrome": "0.0.304",
    "@types/node": "22.13.1",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "action": {},
    "host_permissions": [
      "https://*/*",
      "<all_urls>"
    ],
    "permissions": [
      "identity"
    ],
    "key": "$CRX_KEY",
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*"
        ],
        "matches": [
          "<all_urls>"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      },
      {
        "resources": [
          "tabs/login.html",
          "tabs/register.html",
          "tabs/profile.html"
        ],
        "matches": [
          "chrome-extension://*/*"
        ],
        "use_dynamic_url": false
      }
    ]
  }
}
